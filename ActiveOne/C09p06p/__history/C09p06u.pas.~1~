unit C09l06u;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Menus;

type
  TActionListForm = class(TForm)
    MainMenu: TMainMenu;
    Sum1: TMenuItem;
    mmNew: TMenuItem;
    mmCheck: TMenuItem;
    mmExit: TMenuItem;
    Level1: TMenuItem;
    mm1D: TMenuItem;
    mm2D: TMenuItem;
    mm3D: TMenuItem;
    mm4D: TMenuItem;
    gbAnswer: TGroupBox;
    lblSum1: TLabel;
    lblSum2: TLabel;
    Label1: TLabel;
    lblAnswer: TLabel;
    edtAnswer: TEdit;
    procedure FormCreate(Sender: TObject);
    procedure mmCheckClick(Sender: TObject);
    procedure mmExitClick(Sender: TObject);
    procedure mm1DClick(Sender: TObject);
    procedure mm2DClick(Sender: TObject);
    procedure mm3DClick(Sender: TObject);
    procedure mm4DClick(Sender: TObject);
    procedure mmNewClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  ActionListForm: TActionListForm;
  Level: integer = 1;
  Total: integer = 0;
  Num1: integer;
  Num2: integer;

implementation

{$R *.dfm}

procedure TActionListForm.FormCreate(Sender: TObject);
begin
  Randomize;
end;

procedure TActionListForm.mm1DClick(Sender: TObject);
begin
  Level := 1;
end;

procedure TActionListForm.mm2DClick(Sender: TObject);
begin
  Level := 2;
end;

procedure TActionListForm.mm3DClick(Sender: TObject);
begin
  Level := 3;
end;

procedure TActionListForm.mm4DClick(Sender: TObject);
begin
  Level := 4
end;

procedure TActionListForm.mmCheckClick(Sender: TObject);
var
  Answer: integer;
begin
  Answer := StrToInt(edtAnswer.Text);
  if Answer = Total then
  begin
  ShowMessage('Answer is correct')
  end
  else
  ShowMessage('Answer is incorrect');
end;

procedure TActionListForm.mmExitClick(Sender: TObject);
begin
 ActionListForm.Close;
end;

procedure TActionListForm.mmNewClick(Sender: TObject);
begin

  case Level of
    1:
    begin
      Num1 := Random(9) + 1;
      Num2 := Random(9) + 1;
      Total := Num1 + Num2;
      lblSum1.Caption := IntToStr(Num1);
      lblSum2.Caption := IntToStr(Num2);
    end;
    2:
    begin
      Num1 := Random(90) + 10;
      Num2 := Random(90) + 10;
      Total := Num1 + Num2;
      lblSum1.Caption := IntToStr(Num1);
      lblSum2.Caption := IntToStr(Num2);
    end;
    3:
    begin
      Num1 := Random(900) + 100;
      Num2 := Random(900) + 100;
      Total := Num1 + Num2;
      lblSum1.Caption := IntToStr(Num1);
      lblSum2.Caption := IntToStr(Num2);
    end;
    4:
    begin
      Num1 := Random(9000) + 1000;
      Num2 := Random(9000) + 1000;
      Total := Num1 + Num2;
      lblSum1.Caption := IntToStr(Num1);
      lblSum2.Caption := IntToStr(Num2);
    end;
  end;
end;

end.
